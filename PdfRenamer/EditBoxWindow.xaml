<Window x:Class="PdfRenamer.EditBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditBoxWindow" Height="139" Width="660">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="3" Grid.Row="0" Padding="3" x:Name="lblMessage">This is the message:</TextBlock>
        <TextBox Grid.Row="1" Margin="3" Padding="3" x:Name="txtText" Text="this is the text to edit"></TextBox>
        <StackPanel Grid.Row="2" Margin="3" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Right">
            <Button Margin="3" Padding="3" Content="OK" IsDefault="True" Click="BtnOKPressed"></Button>
            <Button Margin="3" Padding="3" Content="Cancel" IsCancel="True" Click="BtnCancelPressed"></Button>
        </StackPanel>
    </Grid>
</Window>
